<% if modal %>
  <div data-controller="tweet turbo-modal" class="tweet-form" data-tweet-target="modal">
  <% autofocus = true %>
<% else %>
  <div data-controller="tweet" class="tweet-form">
<% end %>
  <% if modal %>
    <div data-action="click->turbo-modal#close" class="close-button">X</div>
  <% end %>

  <%= form_with model: Comment.new, url: comments_path(id: t), data: { action: "turbo:submit-end->tweet#clear turbo:submit-end->turbo-modal#close"} do |f| %>
    <div class="origin-tweet">
        <%= render "quotes/quote_single_tweet", t: t %>
    </div>

    <div class="area-box" >
      <% if params[:username] == current_user.username %>
        <% placeholder = "Add another Tweet!" %>
      <% else %>
        <% placeholder = "Tweet your reply!" %>
      <% end %>
      <%= f.text_area :body, placeholder: placeholder, :rows => 4 , :cols => 50, data: {controller: "autogrow", "tweet-target": "area", "action": "input->tweet#update" }, autofocus: autofocus %>
    </div>

    <%# Counter start %>
      <div class="flex justify-end pr-4 text-base h-6">
        <div class="counter relative text-white" data-tweet-target="counter" data-action="input->tweet#showCount"></div>
      </div>
    <%# Counter end %>

    <%# Submit button start %>
      <div class="tweet-button relative top-6 flex justify-end" data-tweet-target="submit">
        <%= f.submit "Quack", class:"fake-submit-tweet cursor-default focus:outline-none focus:shadow bg-orange-500 text-white font-bold py-2 px-4 rounded enabled:hover:brightness-125 disabled:opacity-60", disabled: true %>
      </div>
    <%# Submit button end %>
  <% end %>
</div>
