<%= tag.div id: dom_id(post, :comments), class: commented_class(post), "data-misc-target": "comment" do %>
  <%= button_to new_comment_path(id: post.id, username: post.author.username), class: "flex gap-2", data: { turbo_frame: "modal", turbo_action: :advance}, method: :get do %>
    <%= comment_btn_icon(post) %>
    <%= tag.div id: dom_id(post, :comments_count) do %>
      <%= post.comments_count %>
    <% end %>
  <% end %>
<% end %>