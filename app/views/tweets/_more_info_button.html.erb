<div class="dropdown" data-controller="dropdown" data-action="click->dropdown#dropMenu">

  <button><%= more_info_svg %></button>

  <div class="dropdown-content more-info" data-dropdown-target="menu">
    <div class="backdrop"></div>
    <% if t.author == current_user %>
        <%= render "tweets/delete_button", t: t %>
      <div class="menuitem">
      </div>
      <div class="menuitem">Pin to your profile</div>
      <div class="menuitem">Change who can reply</div>
      <div class="menuitem">View analytics</div>
    <% elsif t.author != current_user && current_user.following?(t.author) %>
      <div class="menuitem">Unfollow @ author</div>
      <div class="menuitem">Mute @ author</div>
      <div class="menuitem">Block @author</div>
    <% else %>
      <div class="menuitem">Follow @ author</div>
      <div class="menuitem">Mute @ author</div>
      <div class="menuitem">Block @author</div>
    <% end %>
  </div>
</div>

