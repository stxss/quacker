<%= tag.div id: dom_id(t, :bookmarks) do %>
    <%= button_to tweet_bookmark_path(t), class: "flex gap-2 #{bookmarked_class(t)}", method: :patch do  %>
      <%= content_tag(:image,  bookmark_btn_icon(t)) %>
      <%= tag.div id: dom_id(t, :bookmarks_count) do %>
        <%= t.bookmarks_count %>
      <% end %>
    <% end %>
<% end %>
