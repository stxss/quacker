<span class="retweet">
  <%= button_to retweet_path(t.id), params: { retweet: { retweet_id: t.id } }, remote: true, class: "retweet-button", data: { action: "click->retweet#changeColor" } do %>
    <%= content_tag(:span, retweet_icon_svg) %>
    <%= content_tag(:span, "Retweet", class: "retweet-text") %>
  <% end %>
</span>
