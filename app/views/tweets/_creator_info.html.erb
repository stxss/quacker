<div class="creation-info">
  <div class="tweet-info p-3">

    <%= link_to username_path(t.author.username), class: "author no-underline", target: "_top"  do %>
      <span class="display-name"><%= t.author.display_name %></span>
      <span class="icon-lock"><%=  inline_svg_tag("svg/lock.svg") if t.author.account.private_visibility %></span>
      <span class="display-username"><%= "@#{t.author.username}" %></span>
    <% end %>

    <span> Â· </span>
    <%= link_to formatted_time_ago(t.created_at), single_tweet_path(username: t.author.username, id: t.id), class: "created-time hover:underline", target: "_top" %>
  </div>

  <% more_info = true if local_assigns[:more_info].nil? %>
  <% if more_info %>
    <div class="more-info-button">
      <%= render "tweets/more_info_button", t: t %>
    </div>
  <% end %>
</div>
