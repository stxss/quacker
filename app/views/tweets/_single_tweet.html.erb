<% show_view = false if local_assigns[:show_view].nil? %>
<% if t %>
  <%= turbo_frame_tag "tweet_#{t.id}" do %>
    <div class="tweet">
      <% if t.retweet? %>
        <%= render "tweets/retweet_info", t: t %>
      <% elsif t.comment? && @show_replies %>
        <% return %>
      <% elsif t.quote_tweet? %>
      <% else %>
        <%= render "tweets/creator_info", t: t %>
        <%= render "tweets/tweet_body", t: t %>
        <div class="activity-box">
          <%= render "tweets/comments", t: t %>

          <span class="retweets">
            <%= render "tweets/retweets", t: t %>
          </span>

          <span class="likes">
            <%= render "likes/likes", t: t %>
          </span>

          <% if show_view %>
            <span class="bookmarks">
              <%= render "bookmarks/bookmark_count", t: t %>
            </span>
          <% end %>

          <span class="share">
            <%= render "tweets/share", t: t, show_view: show_view %>
          </span>
        </div>
        <% if !notifications_view %>
          <%= render "tweets/show_comments", t: t %>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= render "tweets/page_not_available" %>
<% end %>


