<%= render "tweets/creator_info", t: t %>
<div class="tweet-info">
  <%= render "tweets/tweet_body", t: t %>

  <div class="activity-box flex p-3">
    <%= render "comments/comments", t: t %>
    <%= render "retweets/retweets", t: t %>
    <%= render partial: "tweets/likes", locals: {t: t} %>
    <%= render partial: "tweets/bookmarks", locals: {t: t} %>

    <%= render "tweets/share", t: t, view: view %>
  </div>
</div>
