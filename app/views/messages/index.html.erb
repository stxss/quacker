<div class="new-message flex-auto">
  <%= link_to "New Message", new_message_path %>
</div>

<div class="new-message flex-auto">
  <%= link_to "new conversation", new_conversation_path, data: { turbo_frame: "modal", turbo_action: :advance} %>
</div>

<%= turbo_frame_tag "messages", class: "flex-auto" do %>
  <div class="messages-list flex-initial w-56">

    <% @messages.each do |m| %>
      <div><%= m.name %></div>
    <% end %>
  </div>
  <div class="individual-message flex-1 w-96">
    individual messages
  </div>

<% end %>



