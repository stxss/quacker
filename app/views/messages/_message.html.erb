<% bg_color = "bg-gray-500" %>
<% post_bg_color = "bg-[#060728]" %>

<% internal_post = message.find_post_by_internal_url %>
<% if !internal_post.blank? %>
  <%= render "messages/internal_post", internal_post: internal_post , message_comment: message, post_bg_color: post_bg_color , bg_color: bg_color, sender_corner: 'bl', message_align: 'self-start' %>
<% else %>
  <div class="max-w-md h-fit p-3 rounded-xl rounded-bl-none m-1 self-start text-white <%= bg_color %> break-words" id="<%= message.id %>" data-controller="scroller">
    <%= auto_link(message.urlize, html: {class: "underline hover:decoration-2"}) { |text| text.gsub(/https?:\/\//, "").truncate(20) } %>
  </div>
<% end %>
