<% if @user.following?(current_user) %>
  <%= turbo_stream.update("unfollow", partial: "follows/follow_back", locals: {user: @user}) %>
<% else %>
  <%= turbo_stream.update("unfollow", partial: "follows/follow", locals: {user: @user}) %>
  <%= turbo_stream.update_all("#unfollow-from-post-#{@user.id}", partial: "follows/follow_from_post", locals: {user: @user}) %>
<% end %>
