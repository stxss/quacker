<% if @user.account.private_visibility %>
  <%= turbo_stream.update("follow", partial: "follows/cancel_request", locals: {user: @user}) %>
<% else %>
  <%= turbo_stream.update("follow", partial: "follows/unfollow", locals: {user: @user}) %>
  <%= turbo_stream.update_all("#follow-from-post-#{@user.id}", partial: "follows/unfollow_from_post", locals: {user: @user}) %>
<% end %>
