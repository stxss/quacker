<% @notifications.each do |n| %>
  <% if n.notification_type == "follow" && n.notifier.following?(n.notified) %>
    <%= render partial: "follow_notification", locals: { notifier: n.notifier } %>
  <% elsif n.notification_type == "like" %>
    <%= render partial: "like_notification", locals: { notifier: n.notifier, post: n.post } %>
  <% elsif n.notification_type == "comment" %>
    <%= render partial: "comment_notification", locals: { notifier: n.notifier, post: n.post, original: n.post.original, view: :notification } %>
  <% elsif n.notification_type == "repost" %>
    <%= render partial: "repost_notification", locals: { notifier: n.notifier, post: n.post } %>
  <% elsif n.notification_type == "quote" %>
    <%= render partial: "posts/single_post", locals: { post: n.post, view: :notification } %>
  <% end %>
<% end %>

