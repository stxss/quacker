<% @notifications.each do |n|%>
  <% if n.notification_type == "follow" %>
    <%= render "follow_notification", notifier: n.notifier_id %>
  <% elsif n.notification_type == "like" %>
    <%= render "like_notification", notifier: n.notifier_id, tweet: n.tweet %>
  <% elsif n.notification_type == "reply" %>
    <%= render "reply_notification", notifier: n.notifier_id, tweet: n.tweet %>
  <% elsif n.notification_type == "retweet" %>
    <%= render "retweet_notification", notifier: n.notifier_id, tweet: n.tweet %>
  <% end %>
<% end %>

