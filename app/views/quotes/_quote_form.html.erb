<div data-controller="tweet turbo-modal" class="tweet-form">
  <%= form_with model: Quote.new, url: quotes_path(id: rt), data: { action: "turbo:submit-end->tweet#clear turbo:submit-end->turbo-modal#close"} do |f| %>

    <div onclick="history.back()" class="close-button">X</div>

    <div class="area-box" >
      <%= f.text_area :body, placeholder: "What is happening?!", :rows => 4 , :cols => 50, data: {controller: "autogrow", "tweet-target": "area", "action": "input->tweet#update" } %>
    </div>
    <div class="circle-counter" data-tweet-target="circle counter" data-action="input->tweet#progressCircle input->tweet#showCount"></div>
      <div class= "origin_tweet">
        <%= render "quotes/quote_single_tweet", t: rt %>
      </div>
    <div class="tweet-button" data-tweet-target="submit" >
      <%= turbo_frame_tag "submit-tweet" do %>
        <div class="fake-submit-tweet">
          Tweet
        </div>
      <% end %>
    </div>
  <% end %>
</div>
