<%= turbo_frame_tag "tweet_#{t.id}" do %>
  <div class="tweet" >
    <% if t.body && t.retweet_id %>
      <%= render "quotes/quote_tweet_info", t: t, show_rt: false %>
    <% else %>
      <%= render "tweets/creator_info", t: t, more_info: false %>
      <%= render "tweets/tweet_body", t: t %>
    <% end %>
  </div>
<% end %>
