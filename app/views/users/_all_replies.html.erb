<%= turbo_stream_from "comments" %>
<%= turbo_stream_from "reposts" %>
<%= turbo_stream_from "likes" %>

<%= render partial: "users/page_links" %>

<% replies.each do |post| %>
  <% original = post.original.nil? ? Post.with_deleted.find(post.parent_id) : post.original %>
  <% root = post.root.nil? ? Post.with_deleted.find(post.root_id) : post.root %>
  <%= render partial: "posts/user_comment_page", locals: { post: post, original: original, root: root, view: :all_user_posts } %>
<% end %>
