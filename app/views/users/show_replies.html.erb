<%= render "profile_banner" %>

<% if @blocking %>
  <%= render "users/blocked_view", last_action: "show_replies" %>
<% elsif @blocked %>
  <%= @user.username %> has blocked you
<% else %>
  <%= turbo_frame_tag "all-tweets-#{@user.id}" do %>
    <%= render "users/all_replies", replies: @user.all_replies(current_user) %>
  <% end %>
<% end %>

