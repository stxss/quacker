<%= turbo_stream_from "comments" %>
<%= turbo_stream_from "retweets" %>
<%= turbo_stream_from "likes" %>
<%= turbo_stream_from "bookmarks" %>

<% if current_user.account.has_muted?(user) %>
  <%= render "muted_accounts/unmute_from_banner", user: user %>
<% end %>

<%= render "users/page_links" %>

<% tweets.each do |t| %>
  <% original = t.original if t.comment? || t.retweet? || t.quote_tweet? %>
  <% next if t.retweet? && (current_user.account.has_blocked?(original.author) || original.author.account.has_blocked?(current_user)) %>
  <%= render "tweets/user_main_page", t: t, original: original %>
<% end %>
